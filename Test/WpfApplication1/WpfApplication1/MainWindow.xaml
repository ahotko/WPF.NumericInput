<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ni="http://hotko.org/wpf/controls/numericinput"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <ni:NumericInputInteger x:Name="EditInt"
                                Minimum="-1000"
                                Maximum="1000"
                                Width="200"
                                Height="25"
                                ValueChanged="ValueChangedInt"/>
        <ni:NumericInputFloat x:Name="EditFlt"
                              Maximum="30"
                              StringFormat="N2"
                              Width="200"
                              Height="25" 
                              ValueChanged="ValueChangedDbl"/>
        <TextBox 
                         Width="200"
                         Height="25"
            Name="Text1"/>
        <Button Content="Klikni me"
                Click="KnofKlik" />
    </StackPanel>
</Window>
